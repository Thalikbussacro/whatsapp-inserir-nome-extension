{
    "name": "Nome Dinâmico WhatsApp Web",
    "description": "Extensão com nome configurável para aparecer em suas mensagens.",
    "version": "1.0",
    "manifest_version": 3,
  
    "permissions": [
      "storage"
    ],
    "host_permissions": [
      "https://web.whatsapp.com/*"
    ],
  
    "content_scripts": [
      {
        "matches": ["https://web.whatsapp.com/*"],
        "js": ["content-script.js"]
      }
    ],
  
    "action": {
      "default_popup": "popup.html"
    },
  
    "icons": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  }
  